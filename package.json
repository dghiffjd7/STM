{
  "name": "stm",
  "version": "0.1.0",
  "description": "Silly Tavern Maid - AI-powered desktop companion",
  "main": "dist/main/app.js",
  "scripts": {
    "dev": "concurrently -n VITE,MAIN,PRELOAD,ELECTRON -c green,cyan,magenta,yellow \"vite\" \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "npx esbuild src/preload/index.ts --bundle --platform=node --external:electron --outfile=dist/preload/index.js --format=cjs --sourcemap --watch",
    "dev:electron": "wait-on dist/main/app.js dist/preload/index.js && electron .",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "npx esbuild src/preload/index.ts --bundle --platform=node --external:electron --outfile=dist/preload/index.js --format=cjs --sourcemap",
    "build": "npm run build:main && npm run build:preload && vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "desktop-pet"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.13",
    "electron-store": "^8.2.0",
    "google-auth-library": "^9.6.3",
    "keytar": "^7.9.0",
    "lottie-web": "^5.12.2"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@tailwindcss/forms": "^0.5.7",
    "@tanstack/react-query": "^5.17.19",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.25.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "framer-motion": "^11.0.3",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^9.0.1",
    "zustand": "^4.5.0"
  },
  "build": {
    "appId": "com.stm.app",
    "productName": "STM",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
